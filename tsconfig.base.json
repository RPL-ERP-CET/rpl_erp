{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "removeComments": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "allowJs": false,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "composite": true,
        "types": [
            "node",
            "vitest/globals"
        ],
        "customConditions": [
            "development"
        ],
        "paths": {
            "@server/*": [
                "./apps/server/src/*"
            ],
            "@client-web/*": [
                "./apps/client-web/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
