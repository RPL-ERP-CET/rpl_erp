{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "allowImportingTsExtensions": false,
        "emitDeclarationOnly": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types",
            "./src/types"
        ],
        "baseUrl": "./",
        "types": [
            "node",
            "jest"
        ],
        "strictBindCallApply": false
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}
