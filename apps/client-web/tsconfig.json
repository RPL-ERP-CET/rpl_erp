{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@server/*": [
        "../../apps/server/src/*"
      ],
      "@client-web/*": [
        "./src/*"
      ],
      "@common/components": [
        "./src/components/"
      ],
      "@common/services": [
        "./src/services/"
      ],
      "@common/hooks": [
        "./src/hooks/"
      ],
      "@common/store": [
        "./src/store/"
      ],
      "@common/utils": [
        "./src/utils/"
      ],
      "@common/types": [
        "./src/types/"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
